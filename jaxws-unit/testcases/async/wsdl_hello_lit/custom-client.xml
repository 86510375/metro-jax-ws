          xmlns:xs="http://www.w3.org/2001/XMLSchema"
          xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/">
  <enableAsyncMapping>true</enableAsyncMapping>

  <bindings node="wsdl:definitions/wsdl:types/xs:schema[@targetNamespace='urn:test:types']">
    <ns2:schemaBindings xmlns:ns2="http://java.sun.com/xml/ns/jaxb">
      <ns2:package name="async.wsdl_hello_lit.client"/>
    </ns2:schemaBindings>
  </bindings>

  <bindings node="wsdl:definitions/wsdl:portType[@name='Hello']/wsdl:operation[@name='hello1']">
    <method name="hello1World"/>
  </bindings>
</bindings>