import javax.activation.DataHandler;
import javax.xml.transform.stream.StreamSource;

testXml = resource("test.xml");

claimForm = new DataHandler(new StreamSource(testXml), "text/xml");
req = new ClaimFormTypeRequest();
req.setRequest(claimForm);

resp = helloPort.claimForm(req);

DataHandler out = resp.getResponse();
assertNotNull(out);

assertTrue(AttachmentHelper.compareStreamSource(
  new StreamSource(testXml), out.getContent()
));
